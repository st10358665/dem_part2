@model demo_part2.Models.get_claims

@{
    ViewData["Title"] = "Claims Overview";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2c3e50; 
        margin: 0;
        padding: 20px;
        color: #ecf0f1; 
    }

    h1 {
        color: #ecf0f1; 
        text-align: center; 
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    thead {
        background-color: #007bff;
        color: white;
    }

    th, td {
        border: 1px solid #7f8c8d; 
        padding: 10px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #34495e; 
    }

    tr:hover {
        background-color: #3b5998; 
    }

    a {
        color: #3498db; 
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>@ViewData["Title"]</h1>

<table>
    <thead>
        <tr>
            <th>User Email</th>
            <th>Module</th>
            <th>User ID</th>
            <th>Hours Worked</th>
            <th>Hour Rate</th>
            <th>Note</th>
            <th>Total Amount</th>
            <th>Document</th>
            <th>Status</th>
        </tr>
    </thead>

    <tbody>
        @for (int count = 0; count < Model.email.Count; count++)
        {
            <tr>
                <td>@Model.email[count]</td>
                <td>@Model.module[count]</td>
                <td>@Model.id[count]</td>
                <td>@Model.hours[count]</td>
                <td>@Model.rate[count]</td>
                <td>@Model.note[count]</td>
                <td>@Model.total[count]</td>
                <td>
                    <a href="~/pdf/@Model.filename[count]" asp-append-version="true">@Model.filename[count]</a>
                </td>
                <td>@Model.status[count]</td>
            </tr>
        }
    </tbody>
</table>