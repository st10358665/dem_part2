@model demo_part2.Models.approve

<h2>Approve Claims</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2c3e50; 
        margin: 0;
        padding: 20px;
        color: #ecf0f1;
    }

    h2 {
        color: #ecf0f1; 
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #34495e; 
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    }

    th, td {
        border: 1px solid #7f8c8d; 
        padding: 10px;
        text-align: left;
    }

    thead {
        background-color: #007bff;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #2c3e50; 
    }

    tr:hover {
        background-color: #3b5998; 
    }

    .btn {
        padding: 5px 10px;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>

<table class="table">
    <thead>
        <tr>
            <th>User Email</th>
            <th>Module</th>
            <th>User ID</th>
            <th>Hours Worked</th>
            <th>Hour Rate</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (approve claim in Model.approvedList)
        {
            <tr>
                <td>@claim.Email</td>
                <td>@claim.Module</td>
                <td>@claim.UserId</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourRate</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.Status</td>
                <td>
                    @using (Html.BeginForm("ApproveClaim", "Claims", FormMethod.Post))
                    {
                        @Html.Hidden("id", claim.UserId)
                        <button type="submit" class="btn btn-success">Approve</button>
                    }
                    @using (Html.BeginForm("RejectClaim", "Claims", FormMethod.Post))
                    {
                        @Html.Hidden("id", claim.UserId)
                        //button for rejection
                        <button type="submit" class="btn btn-danger">Reject</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>