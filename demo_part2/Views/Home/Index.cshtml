@model demo_part2.Models.register

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #343a40; 
        margin: 0;
        padding: 20px;
    }

    .text-center {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        background-color: #495057; 
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        position: relative;
        top: 50px; 
    }

    h1 {
        color: #ffffff; 
        text-align: center; 
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #e9ecef; 
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    select {
        width: calc(100% - 20px);
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 4px;
        border: 1px solid #ced4da; 
        background-color: #6c757d; 
        color: #ffffff; 
    }

    input[type="submit"] {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    a {
        display: inline-block;
        margin-top: 15px;
        color: #007bff;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <form method="post" asp-action="Register_user">

        <label>Name:</label>
        <input type="text" asp-for="username" required />

        <label>Email:</label>
        <input type="email" asp-for="email" required />

        <label>Select role:</label>
        <select asp-for="role">
            <option selected disabled>Select role here</option>
            <option value="Lecture">Lecture</option>
            <option value="pm">PM</option>
        </select>

        <label>Password:</label>
        <input type="password" asp-for="password" required />

        <input type="submit" value="Register Now" />
    </form>

    <a href="/Home/Login">Already have an account? Login now</a>
</div>