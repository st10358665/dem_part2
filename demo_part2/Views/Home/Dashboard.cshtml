@model demo_part2.Models.claim

@{
    ViewData["Title"] = "Dashboard Page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2c3e50; 
        margin: 0;
        padding: 20px;
        color: #ecf0f1; 
    }

    h1 {
        color: #ecf0f1; 
        text-align: center; 
    }

    a {
        text-decoration: none;
        color: #3498db; 
        margin-right: 15px;
    }

        a:hover {
            text-decoration: underline;
        }

    form {
        background-color: #34495e; 
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        max-width: 600px;
        margin: auto;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #ecf0f1; 
    }

    input[type="text"],
    textarea {
        width: calc(100% - 20px);
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 4px;
        border: 1px solid #7f8c8d; 
        background-color: #2c3e50; 
        color: #ecf0f1; 
    }

    input[type="file"] {
        margin-bottom: 15px;
    }

    input[type="submit"] {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<h1>@ViewData["Title"]</h1>


<a href="/Home/view_claims">View Claims</a>
<a href="/Home/approves">Approves</a>
<a href="/Pages/Index">Approve2</a>


<br />
<br />

<form method="post" asp-action="claim_sub" enctype="multipart/form-data">
    <label>Module name</label>
    <input type="text" asp-for="user_email" required />

    <label>Hours worked</label>
    <input type="text" asp-for="hours_worked" required />

    <label>Hours per rate on module</label>
    <input type="text" asp-for="hour_rate" required />

    <label>Description</label>
    <textarea asp-for="description" required></textarea>

    <label>Upload file [optional]</label>
    <input type="file" name="File" />

    <input type="submit" value="Submit Claim" />
</form>